@model Category

@*
padding changes inside
margin changes outside
*@

@* <form method="post" asp-action="DeletePOST"> *@
<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>
        </div>
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <div class="mb-3">
            <label asp-for="Name" class="mb-1"></label>
            <input asp-for="Name" class="form-control" disabled/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="mb-1"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width: 13%;">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 13%;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}