@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<dev class="container p-3">
    <dev class="row pt-4 pb-4">
        <dev class="col-6">
            <h2 class="text-primary">Category List</h2>
        </dev>
        <dev class="col-6 d-flex align-items-center justify-content-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus-fill"></i> &nbsp; Create New Category
            </a>
        </dev>
    </dev>


    <table class="table table-bordered table-striped" style="width:100%;">
        <thead>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="50%">@category.Name</td>
                    <td width="30%">@category.DisplayOrder</td>
                    <td>
                        <div class="btn-group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> &nbsp; Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</dev>